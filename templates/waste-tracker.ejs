      href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="navBar">
      <div>
        <h1>
          <a href="/"><img class="logoPic" src="binny.svg" /></a>RecycleRight
        </h1>
      </div>
      <!-- <button class="sectionButton"><a href="/login">Log In/Sign Up</a></button> -->
      <button class="navBarButton">
        <a href="/recycling-guide">Recycling Guide</a>
      </button>
      <!-- fix this later -->
      <!-- <label for="dog-names">Features</label> 
        <select name="Features" id="feat"> 
            <button><option value="waste">Waste Tracker</option> </button>
            <option value="progress">Progress Tracker</option> 
        </select> -->
      <button class="navBarButton">
        <a href="/waste-tracker">Waste Tracker</a>
      </button>
      <button class="sectionButton">
        <a href="/progress-timeline">Progress Tracker</a>
      </button>
      <button class="navBarButton"><a href="/about-us">About Us</a></button>
      <button class="navBarButton"><a href="/binny">Binny</a></button>
      <button class="navBarButton"><a href="/logout">Logout</a></button>
    </div>

    <h1>Waste Tracker</h1>

    <!-- Form to submit more waste data -->
    <form action="/waste-tracker" method="POST">
      <label for="wasteType">Waste Type:</label>
      <input type="text" id="wasteType" name="wasteType" required /><br />

      <label for="weight">Weight (kg):</label>
      <input
        type="number"
        id="weight"
        name="weight"
        step="0.01"
        required
      /><br />

      <button type="submit">Submit Waste Data</button>
    </form>

    <% if (wasteData.length===0) { %>
    <p>No waste data available.</p>
    <% } else { %>

    <table>
      <thead>
        <tr>
          <th>Date & Time</th>
          <th>Waste Type</th>
          <th>Weight (kg)</th>
        </tr>
      </thead>
      <tbody>
        <% wasteData.forEach(function (entry) { %>
        <tr>
          <td><%= entry.timestamp %></td>
          <td><%= entry.waste_type %></td>
          <td><%= entry.weight %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } %>

    <!-- JavaScript to dynamically update content -->
    <script>
      // JavaScript code here to update content dynamically
    </script>
  </body>
</html>
