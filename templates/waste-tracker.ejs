<!DOCTYPE html>
<html>
  <head>
    <title>Waste Tracker</title>
    <link rel="stylesheet" href="index.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="navBar">
      <div class="navBar">
        <div>
          <a href="/"><img class="logoPic" src="binny.svg"/></a>
        </div>
        <div>
          <h1>RecycleRight</h1>
        </div>
      </div>
      <div class="rightButton">
        <% if (!isLoggedIn) { %>
        <button class="navBarButton"><a href="/login">Log In/Sign Up</a></button>
        <% } %>
        <button class="navBarButton"><a href="/recycling-guide">Recycling Guide</a></button>
        <button class="navBarButton"><a href="/waste-tracker">Waste Tracker</a></button>
        <button class="navBarButton"><a href="/progress-timeline">Progress Tracker</a></button>
        <button class="navBarButton"><a href="/about-us">About Us</a></button>
        <button class="navBarButton"><a href="/binny">Binny</a></button>
        <% if (isLoggedIn) { %>
          <button class="navBarButton"><a href="/settings">Settings</a></button>
          <button class="navBarButton"><a href="/logout">Logout</a></button>
        <% } %>
      </div>
    </div>

    <h1>Waste Tracker</h1>
    <div class="waste">
      <!-- Form to submit more waste data -->
    <form action="/waste-tracker" method="POST">
      <label for="wasteType">Waste Type:</label>
      <input type="text" id="wasteType" name="wasteType" required /><br />

      <label for="weight">Weight (kg):</label>
      <input
        type="number"
        id="weight"
        name="weight"
        step="0.01"
        required
      /><br />

      <button type="submit">Submit Waste Data</button>
    </form>

    <% if (wasteData.length===0) { %>
      <p>No waste data available.</p>
    <% } else { %>
      </div>
      <div class="waste">
        <table>
          <thead>
            <tr>
              <th>Date & Time</th>
              <th>Waste Type</th>
              <th>Weight (kg)</th>
            </tr>
          </thead>
          <tbody>
            <% wasteData.forEach(function (entry) { %>
            <tr>
              <td><%= entry.timestamp %></td>
              <td><%= entry.waste_type %></td>
              <td><%= entry.weight %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
    <% } %>
    </div>

    <!-- JavaScript to dynamically update content -->
    <script>
      // JavaScript code here to update content dynamically
    </script>
  </body>
</html>
